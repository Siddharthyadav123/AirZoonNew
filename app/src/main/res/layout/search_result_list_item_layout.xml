<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/hotspotTypeImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/marker_airzoon" />

    <com.az.airzoon.customviews.CustomFontTextView
        android:id="@+id/hotSpotName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/hotspotCatImageView"
        android:layout_toRightOf="@+id/hotspotTypeImageView"
        android:maxLines="2"
        android:padding="5dp"
        android:text="Title"
        android:textColor="@color/Black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:sid_customFont="gotham_book" />

    <com.az.airzoon.customviews.CustomFontTextView
        android:id="@+id/hotSpotAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotSpotName"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@+id/hotspotCatImageView"
        android:layout_toRightOf="@+id/hotspotTypeImageView"
        android:maxLines="2"
        android:singleLine="true"
        android:text="Address"
        android:textColor="@color/Gray"
        android:textSize="16dp"
        app:sid_customFont="gotham_book" />

    <ImageView
        android:id="@+id/hotspotCatImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/speedLayout"
        android:padding="2dp"
        android:src="@drawable/fastfoodset" />

    <LinearLayout
        android:id="@+id/speedLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/moreImageView"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hotspotSpeedImageView"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/speedone" />

        <TextView
            android:id="@+id/hotspotSpeedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="speed"
            android:textColor="@color/OrangeRed"
            android:textSize="10dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/moreImageView"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:rotation="-90"
        android:src="@drawable/downarrow" />


</RelativeLayout>