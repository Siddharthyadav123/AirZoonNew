<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/headerLinLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/tutorial_bg_header"
        android:gravity="center"
        android:minHeight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:padding="7dp"
            android:text="All hotspots in one app!"
            android:textColor="@color/Black"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bodyLinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footerTopLinLayout"
        android:layout_below="@+id/headerLinLayout"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footerTopLinLayout"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_above="@+id/footerLinLayout"
        android:background="@drawable/tutorial_bg_footer_top"
        android:gravity="center|left"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/footerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="3dp"
            android:text="air"
            android:textColor="@color/Black"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footerLinLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:gravity="center|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/goTextView"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:text="@string/go_text"
            android:textColor="@color/MediumVioletRed" />

    </LinearLayout>


</RelativeLayout>