<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.87">

        <com.az.airzoon.customviews.CurveRelLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="@drawable/dailog_shape_black">

            <ImageView
                android:id="@+id/closeProfileImageView"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_alignParentRight="true"
                android:background="?android:selectableItemBackground"
                android:padding="10dp"
                android:src="@drawable/close1" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/closeProfileImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/nameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/nameImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/profilename" />

                    <com.az.airzoon.customviews.CustomFontEditText
                        android:id="@+id/nameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/nameImage"
                        android:background="@null"
                        android:hint="@string/enterUserNameText"
                        android:singleLine="true"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:textSize="15dp"
                        app:sid_customFont="open_sans_regular" />


                </RelativeLayout>

                <View
                    android:id="@+id/seprator1"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_below="@+id/nameLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2.5dp"
                    android:alpha="0.5"
                    android:background="@color/Gray" />

                <RelativeLayout
                    android:id="@+id/fbLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="7dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/fbImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/facebookedit" />

                    <com.az.airzoon.customviews.CustomFontTextView
                        android:id="@+id/fbText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/fbImage"
                        android:gravity="center|left"
                        android:text="@string/facebookText"
                        android:textColor="@color/White"
                        android:textSize="15dp"
                        app:sid_customFont="gotham_book" />

                    <!-- <ImageView
                         android:id="@+id/fbOnOffImageView"
                         android:layout_width="40dp"
                         android:layout_height="25dp"
                         android:layout_alignParentRight="true"
                         android:layout_centerVertical="true"
                         android:background="?android:selectableItemBackground"
                         android:src="@drawable/swich_off" />-->
                </RelativeLayout>

                <View
                    android:id="@+id/seprator2"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_below="@+id/fbLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2.5dp"
                    android:alpha="0.5"
                    android:background="@color/Gray" />


                <RelativeLayout
                    android:id="@+id/twiiterLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fbLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/twImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tweetedit" />

                    <com.az.airzoon.customviews.CustomFontTextView
                        android:id="@+id/twText"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/twImage"
                        android:gravity="center|left"
                        android:text="@string/twitterText"
                        android:textColor="@color/White"
                        android:textSize="15dp"
                        app:sid_customFont="gotham_book" />


                    <!--  <ImageView
                          android:id="@+id/twOnOffImageView"
                          android:layout_width="40dp"
                          android:layout_height="25dp"
                          android:layout_alignParentRight="true"
                          android:layout_centerVertical="true"
                          android:background="?android:selectableItemBackground"
                          android:src="@drawable/swich_off" />-->
                </RelativeLayout>

                <View
                    android:id="@+id/seprator3"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_below="@+id/twiiterLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2.5dp"
                    android:alpha="0.5"
                    android:background="@color/Gray" />


                <RelativeLayout
                    android:id="@+id/emailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/twiiterLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/emailImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/name" />

                    <com.az.airzoon.customviews.CustomFontEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/emailImage"
                        android:background="@null"
                        android:hint="@string/enterEmailHintText"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:textSize="15dp"
                        app:sid_customFont="open_sans_regular" />
                </RelativeLayout>

                <View
                    android:id="@+id/seprator4"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_below="@+id/emailLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2.5dp"
                    android:alpha="0.5"
                    android:background="@color/Gray" />


                <RelativeLayout
                    android:id="@+id/phoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/phoneImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/call_large" />

                    <com.az.airzoon.customviews.CustomFontEditText
                        android:id="@+id/phoneNumEditText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/phoneImage"
                        android:background="@null"
                        android:hint="@string/enterPhoneNoHintText"
                        android:inputType="phone"
                        android:textColor="@color/White"
                        android:textColorHint="@color/White"
                        android:textSize="15dp"
                        app:sid_customFont="open_sans_regular" />


                </RelativeLayout>

                <View
                    android:id="@+id/seprator5"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_below="@+id/phoneLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2.5dp"
                    android:alpha="0.5"
                    android:background="@color/Gray" />

                <RelativeLayout
                    android:id="@+id/genderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phoneLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/genderImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/gender" />

                    <Spinner
                        android:id="@+id/genderSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/genderImage"
                        android:text="@string/noPhoneNumText"
                        android:textColor="@color/White"
                        android:textSize="15dp" />

                </RelativeLayout>

                <View
                    android:id="@+id/seprator6"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_below="@+id/genderLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2.5dp"
                    android:alpha="0.5"
                    android:background="@color/Gray" />

                <RelativeLayout
                    android:id="@+id/cludeBackupLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/genderLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/cludeBackUpImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/cloud" />

                    <com.az.airzoon.customviews.CustomFontTextView
                        android:id="@+id/cloudeBackupTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/cludeBackUpImage"
                        android:gravity="center|left"
                        android:text="@string/cloudBackupText"
                        android:textColor="@color/White"
                        android:textSize="15dp"
                        app:sid_customFont="gotham_book" />


                </RelativeLayout>

                <View
                    android:id="@+id/seprator7"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_below="@+id/cludeBackupLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2.5dp"
                    android:alpha="0.5"
                    android:background="@color/Gray" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cludeBackupLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/red_btn_drawable"
                        android:text="@string/cancelText"
                        android:textColor="@color/OrangeRed"
                        android:textSize="17dp" />

                    <Button
                        android:id="@+id/submitButton"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/green_btn_drawable"
                        android:text="@string/saveText"
                        android:textColor="@color/Green"
                        android:textSize="17dp" />
                </LinearLayout>

            </RelativeLayout>


        </com.az.airzoon.customviews.CurveRelLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userDPImageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_default" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:visibility="gone" />


    </RelativeLayout>


</LinearLayout>